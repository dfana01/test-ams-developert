<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><a href="#"><i class="fa fa-arrow-left fa-1x" aria-hidden="true" ng-click="back()"></i></a>   Pais</h1>
    </div>
</div>
<!-- /.row -->
<div class="row col-lg-12">
    <div class="row">
        <div>
            <form class="form-horizontal">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button id="update" class="btn btn-info" ng-click="refresh()"> <i class="fa fa-refresh fa-1x"></i> Actualizar Lista</button>
                        <button id="create" class="btn btn-primary" ng-click="create()"> <i class="fa fa-plus fa-1x"></i> Crear</button>
                    </div>
                    <input type="text" class="form-control" id="search" placeholder="Buscar..." ng-model="searchText"/>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="obj in list | filter:searchText">
                    <td>{{ obj.Id}}</td>
                    <td>{{ obj.Nombre }}</td>
                    <td>{{ obj.Activo}}</td>
                    <td>
                        <span class="btn-group">
                            <a class="btn btn-danger" ng-click="delete(obj)" title="Borrar"><i class="fa fa-eraser fa-1x"></i></a>
                            <a class="btn btn-primary" ng-click="update(obj)" title="Actualizar"><i class="fa fa-pencil fa-1x"></i></a>
                        </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script type="text/ng-template" id="update-create-pais.html">
    
    <form novalidate class="form-horizontal col-lg-12" ng-init="obj = $ctrl.obj" name="form" ng-submit="form.$valid && $ctrl.submit()">
        
        <div class="form-group" ng-class="{ 'has-error' : form.Nombre.$invalid && !form.Nombre.$pristine }">
            <label>Nombre</label>
            <input type="text" ng-model="obj.Nombre" class="form-control" ng-required="true" name="Nombre"/>
            <p ng-show="form.Nombre.$invalid && !form.Nombre.$pristine" class="help-block">El campo es requerido.</p>
        </div>
        
        <div class="form-group" ng-class="{ 'has-error' : form.Activo.$invalid && !form.Activo.$pristine }">
            <label>Activo</label>
            <input type="checkbox" ng-model="obj.Activo" class="" name="Activo" ng-checked="true" ng-init="obj.Activo = true"/>
            <p ng-show="form.Activo.$invalid && !form.Activo.$pristine" class="help-block">El campo es requerido.</p>
        </div>
        
        <div class="form-group">
            <div class="col-sm-10">
                <button class="btn btn-primary" ng-disabled="form.$invalid" type="submit" ng-class="{ 'disable' : form.$invalid }">Guardar</button>
                <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">Cancelar</button>
            </div>
        </div>
    </form>
</script>

<script type="text/ng-template" id="delete-pais.html">
    <form novalidate class="form-horizontal col-lg-12" ng-init="obj = $ctrl.obj" name="form" ng-submit="form.$valid && $ctrl.submit()">
        <p>
            ¿Esta seguro que desea eliminar el pais<strong>{{$ctrl.obj.Id? ": "+$ctrl.obj.Id+"-"+$ctrl.obj.Nombre :"" }}</strong>?
        </p>

        <div class="form-group">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">Cancelar</button>
            </div>
        </div>
    </form>
</script>